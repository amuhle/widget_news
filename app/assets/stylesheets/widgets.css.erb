<% environment.context_class.instance_eval { include ApplicationHelper } %>

html,body {
    margin:0;
    padding:0;
    border:none;
}

a img {
    border:none;
}

#widgetContainer {
    width:540px;
    height:522px;
    background-image:url(<%= widgets_server_url + 'assets/background.png' %>);
}

#menu {
    width:446px;
    height:12px;
    padding-top:190px;
    margin:0 auto;
}

.menuButton {
    float:left;
    color:#FFFFFF;
    font-weight:bold;
    cursor:pointer;
    text-align:center;
    font-size:12px;
}

.menuButton:hover {
    color:#CC0;
}

.tab {
    clear:both;
    width:540px;
    height:240px;
    margin-top:20px;
}

.tabContainer {
    width:460px;
    margin:0 auto;
    color:#FFF;
    font-family:Helvetic, Arial, sans-serif;
    font-size:14px;
}

#signUpContainer {
    width:466px;
    height:133px;
    background-image:url(<%= widgets_server_url + 'assets/signUpBG.png' %>);
    margin-top:65px;
}

#signupActionButton {
    width:114px;
    height:21px;
    background-image:url(<%= widgets_server_url + 'assets/submitButton.png' %>);
    border:none;
    margin-left:290px;
    cursor:pointer;
}

.storyRow {
    clear:both;
    float:left;
    margin-bottom:15px;
    padding:2px;
    width:430px;
}
.storyTitle {
    margin-bottom:5px;
    text-decoration:none;
    font-family:Helvetica, Arial, sans-serif;
    font-weight:bold;
    font-size:14px;
    color:#CC0;
}

.storyTitle:hover {
    text-decoration:underline;
}

.storyDescription {
    margin-left:10px;
    font-size:13px;
}

.thumbnailContainer {
    float:left;
    margin-right:10px;
}

.inputTF {
    width:216px;
    height:18px;
    background:none;
    border:none;
    margin-bottom:11px;
    margin-left:240px;
    margin-top:17px;
}

.signupCB {
    margin-top:15px;
}

.connectButton {
    float:left;
    margin-top:40px;
    margin-left:30px
}

#footerText {
    color:#CC0;
    font-size:14px;
    font-style:italic;
    width:300px;
    margin:0 auto;
    text-align:center;
}

.scrollbarC .viewport { width: 430px; height: 240px; overflow: hidden; position: relative; }
.scrollbarC .overview { list-style: none; position: absolute; left: 0; top: 0; padding: 0; margin: 0; }
.scrollbarC .scrollbar{ position: relative; background-position: 0 0; float: right; width: 15px; }
.scrollbarC .track { height: 100%; width:15px; position: relative; }
.scrollbarC .thumb { background: transparent url(<%= widgets_server_url + 'assets/bg-scrollbar-thumb-y.png' %>) no-repeat 50% 100%; height: 20px; width: 25px; cursor: pointer; overflow: hidden; position: absolute; top: 0; left: -5px; }
.scrollbarC .thumb .end { background: transparent url(<%= widgets_server_url + 'assets/bg-scrollbar-thumb-y.png' %>) no-repeat 50% 0; overflow: hidden; height: 5px; width: 25px; }
.scrollbarC .disable { display: none; }