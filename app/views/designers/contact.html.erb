<form class="well col-md">
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <label>First Name</label>
        <input type="text" class="col-md-3 form-control" placeholder="Your First Name">
      </div>
      <div class="form-group">
        <label>Last Name</label>
        <input type="text" class="col-md-3 form-control" placeholder="Your Last Name">
      </div>
      <div class="form-group">
        <label>Email Address</label>
        <input type="text" class="col-md-3 form-control" placeholder="Your email address">
      </div>
      <div class="form-group">
        <label>Subject</label>
        <select id="subject" name="subject" class="col-md-3 form-control">
          <option value="na" selected="">Choose One:</option>
          <option value="service">General Customer Service</option>
          <option value="suggestions">Suggestions</option>
          <option value="product">Product Support</option>
        </select>
      </div>
    </div>
    <div class="col-md-5">
      <div class="form-group">
        <label>Message</label>
        <textarea name="message" id="message" class="input-xlarge col-md-5 form-control" rows="10"></textarea>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <button type="submit" class="btn btn-primary pull-right">Send</button>
    </div>
  </div>
</form>
