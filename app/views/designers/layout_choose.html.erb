<div class="container">
 <h2>Layout Choose</h2>
  <ul style="list-style-type: none" class="thumbnails">
    <% @templates.each do |template| %>
        <li class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
          <div class="img-thumbnail">
            <img src="http://placehold.it/340x200" alt="ALT NAME" class="img-responsive"/>
            <div class="caption">
              <h3><%= template.name %></h3>
              <p class="layout_description"><%= template.description %></p>
              <p align="center">
                <%= button_tag 'Use', class: 'btn btn-primary btn-block', id: 'template-' + template.id.to_s, template: template.id %>
              </p>
            </div>
          </div>
        </li>
    <% end %>
  </ul>
</div>