<%= form_for @template, html: { id: 'template_form' } do |f| %>
  <% if @template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@template.errors.count, 'error') + t('templates.form.error')%></h2>

      <ul>
      <% @template.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, t('templates.form.name') %><br>
    <%= f.text_field :name, class: 'form-control', required: true, placeholder: t('templates.form.name') %>
  </div>
  <div class="form-group">
    <%= f.label :description, t('templates.form.description') %><br>
    <%= f.text_field :description, class: 'form-control', placeholder: t('templates.form.description') %>
  </div>
  <div class="form-group">
    <%= f.label :content, t('templates.form.content') %><br>
    <%= f.text_area :content, id: 'template_content', class: 'form-control', rows: 6, placeholder: t('templates.form.content') %>
  </div>
  <div class="form-group">
    <div id="content" class="form-control" style="position:relative; height: 250px; "></div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <hr>
<% end %>
