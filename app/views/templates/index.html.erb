<h1><%= t('templates.index.title') %></h1>

<table id="tbl_templates" class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th class="col-xs-3 col-sm-3 col-md-4 col-lg-4"><%= t('templates.index.name') %></th>
      <th class="col-xs-6 col-sm-5 col-md-5 col-lg-6"><%= t('templates.index.description') %></th>
      <th class="col-xs-3 col-sm-4 col-md-3 col-lg-2"><%= t('templates.index.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %></td>
        <td><%= template.description %></td>
        <td>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align: center">
            <%= link_to t('templates.index.show') ? '' : '', template, class: 'btn btn-primary btn-sm glyphicon glyphicon-search' %>
            <%= link_to t('templates.index.edit') ? '' : '', edit_template_path(template), class: 'btn btn-primary btn-sm glyphicon glyphicon-edit' %>
            <%= link_to t('templates.index.delete') ? '' : '', template, method: :delete, data: { confirm: I18n.translate('shared.confirm') }, class: 'btn btn-primary btn-sm glyphicon glyphicon-remove' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('templates.index.new'), new_template_path %>

<%= stylesheet_link_tag 'templates' %>
<%= javascript_include_tag 'templates' %>
