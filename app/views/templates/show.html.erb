<fieldset disabled>
  <p id="notice"><%= notice %></p>

  <div class="form-group">
    <%= label_tag :name, t('templates.form.name') %><br>
    <%= text_field_tag :name, @template.name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :description, t('templates.form.description') %><br>
    <%= text_area_tag :description, @template.description, class: 'form-control', rows: 3%>
  </div>
  <div class="form-group">
    <%= label_tag :content, t('templates.form.content') %><br>
    <%= text_area_tag :content, @template.content, class: 'form-control', rows: 6, id: 'template_content' %>
  </div>
  <div class="form-group">
    <div id="content" class="form-control" style="position:relative; height: 250px; "></div>
  </div>
</fieldset>

<%= link_to t('templates.show.edit'), edit_template_path(@template) %> |
<%= link_to t('templates.show.back'), templates_path %>

<%= stylesheet_link_tag 'templates' %>
<%= javascript_include_tag 'ace' %>
<%= javascript_include_tag 'templates' %>
