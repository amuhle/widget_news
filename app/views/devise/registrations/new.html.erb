<h2>Create <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: 'form') do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, t('devise.registrations.email') %>
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('devise.registrations.email') %>
    </div>

    <div class="form-group">
      <%= f.label :password, t('devise.registrations.password') %>
      <%= f.password_field :password, class: 'form-control', placeholder: t('devise.registrations.password') %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t('devise.registrations.password_confirmation') %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: t('devise.sessions.password') %>
    </div>

    <div class="form-group">
      <%= f.label :roles, t('devise.registrations.roles') %>
      <% Role.all.each do |role| %>
          <div class="checkbox">
            <%= check_box_tag 'user[role_ids][]', role.id, @user.roles.include?(role) %>
            <%= role.visible_name %>
          </div>
      <% end %>
    </div>

    <%= f.submit t('devise.registrations.sign_up'), class: 'btn btn-success' %>
<% end %>

<%= render 'devise/shared/links' %>
