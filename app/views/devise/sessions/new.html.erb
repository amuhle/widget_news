<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), method: 'post') do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('devise.sessions.email') %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', placeholder: t('devise.sessions.password') %>
    </div>
    <%= f.submit t('layouts.application.signin'), class: 'btn btn-success' %>
<% end %>

<%= render "devise/shared/links" %>
